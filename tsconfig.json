{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "baseUrl": "server",
    "outDir": "build",
    "target": "es6",
    "skipLibCheck": true
  },
  "experimentalDecorators": true,
  "paths": {
    "@/*": ["apis/*"],
    "/@/*": ["apis/*"],
    "/@/img/*": ["apis/assets/img/*"]
  },
  "exclude": ["node_modules", "client"],
  "inclure": ["./apis/**/*"]
}
